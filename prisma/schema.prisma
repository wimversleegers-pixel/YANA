generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = env("DATABASE_PROVIDER")
  url      = env("DATABASE_URL")
}

enum Role {
  MEMBER
  HOST
  VOLUNTEER
  ADMIN
}

enum ApplicationStatus {
  PENDING
  APPROVED
  DENIED
}

enum EventStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
}

enum RSVPStatus {
  PENDING
  APPROVED
  WAITLIST
  CANCELLED
}

enum RecurrenceFrequency {
  WEEKLY
  MONTHLY
}

model User {
  id             String            @id @default(cuid())
  email          String            @unique
  name           String?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  roles          UserRole[]
  hostedEvents   Event[]           @relation("EventHost")
  auditEntries   AuditLog[]
  chatSessions   ChatSession[]
  accounts       Account[]
  sessions       Session[]
}

model UserRole {
  id      String @id @default(cuid())
  userId  String
  role    Role
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, role])
}

model MemberApplication {
  id          String            @id @default(cuid())
  fullName    String
  email       String
  motivation  String
  honeypot    String?           @default("")
  status      ApplicationStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  reviewedAt  DateTime?
  reviewNotes String?
}

model Event {
  id                 String               @id @default(cuid())
  title              String
  summary            String
  area               String
  exactAddress       String
  startDateTime      DateTime
  endDateTime        DateTime
  timezone           String               @default("Europe/Brussels")
  capacity           Int
  status             EventStatus          @default(PENDING)
  recurrenceEnabled  Boolean              @default(false)
  recurrenceFreq     RecurrenceFrequency?
  recurrenceInterval Int?                 @default(1)
  recurrenceCount    Int?
  hostId             String
  host               User                 @relation("EventHost", fields: [hostId], references: [id])
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  reviewedAt         DateTime?
  reviewNotes        String?
  rsvps              RSVP[]
}

model RSVP {
  id            String     @id @default(cuid())
  eventId        String
  event          Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  token          String     @unique
  contactName    String?
  contactEmail   String?
  status         RSVPStatus @default(PENDING)
  isAnonymous    Boolean    @default(true)
  createdAt      DateTime   @default(now())
}

model ChatSettings {
  id                        String   @id @default("singleton")
  timezone                  String   @default("Europe/Brussels")
  openHour                  Int      @default(17)
  closeHour                 Int      @default(22)
  transcriptStorageEnabled  Boolean  @default(false)
  updatedAt                 DateTime @updatedAt
}

model ChatSession {
  id          String   @id @default(cuid())
  startedAt   DateTime @default(now())
  endedAt     DateTime?
  durationSec Int?
  flagged     Boolean  @default(false)
  volunteerId String?
  volunteer   User?    @relation(fields: [volunteerId], references: [id])
  metadata    String?
}

model ChatFlag {
  id            String   @id @default(cuid())
  chatSessionId String?
  reason        String
  createdAt     DateTime @default(now())
  reporterType  String
}

model AdminSetting {
  id    String @id @default("singleton")
  key   String @unique
  value String
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String
  actor      User     @relation(fields: [actorId], references: [id])
  action     String
  targetType String
  targetId   String
  detail     String?
  createdAt  DateTime @default(now())
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
